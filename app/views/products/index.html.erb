<h2> 
  <%= link_to "Categories", categories_path %> /
  <%= @category.title %> / 
  Products
</h2>

  <ol>
    <% @products.each do |product| %>
      <li>
        <%= product.title %> (<%= number_to_currency product.price %>)
            <ul>
                <% product.variants.each do |variant| %>

                  <li><%= variant.title %> (<%= number_to_currecy variant.price %>)</li>

                <% end %>
            </ul>
      </li>
    <% end %>
  </ol>

